<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="environment" value="local"/>
    <property name="LOG_PATTERN" value="skylens-api-%X{system:-default}.%X{communicationType:-server} ${environment} %X{network:-all} [%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}] %X{web-context-CF-RAY:--} %-5p [%t] [%c] %msg%n%throwable"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
